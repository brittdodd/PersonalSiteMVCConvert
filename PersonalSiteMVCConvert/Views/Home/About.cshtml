    <!-- ================================================== About Me ================================================================================= -->
    <div class="about-me container">

      <div class="section-title">
        <h2>About</h2>
        <p>Learn more about me</p>
      </div>

        <div class="row">
              <div class="col-lg-4" data-aos="fade-right">
                <!-- <img src="assets/img/MyPhotos/ProfileImg.png" class="img-fluid" alt="">   -->
